#include <stdio.h>

int main(){
    double valores[29], total, menor, maior, media;

    for(int i=0;i<29;i++){
        printf("informe o valor do dia %d\n",i+1);
        scanf("%lf",&valores[i]);
        total = total + valores[i];
    }
    
    menor = valores[0];
    maior = valores[0];
    media = total / 29;
    
    for(int i=0;i<29;i++){
        if(valores[i]<menor)
            menor = valores[i];
    }
    
    for(int i=0;i<29;i++){
        if(valores[i]>maior)
            maior = valores[i];
    }
    
    printf("menor valor de faturamento: R$ %lf\n", menor);
    printf("maior valor de faturamento: R$ %lf\n", maior);
    printf("dias com faturamento diario superior a media mensal:");
    
    for(int i=0;i<29;i++){
        if(valores[i]>media)
            printf(" %d,",i+1);
    }

}
